{
  "rootGroups": [
    {
      "name": "global",
      "softMemoryLimit": "1MB",
      "hardConcurrencyLimit": 100,
      "maxQueued": 1000,
      "softCpuLimit": "1h",
      "hardCpuLimit": "1d",
      "schedulingPolicy": "weighted",
      "jmxExport": true,
      "subGroups": [
        {
          "name": "${domain}:${region}:${cluster}",
          "softMemoryLimit": "2MB",
          "hardConcurrencyLimit": 3,
          "maxQueued": 4,
          "schedulingWeight": 5
        }
      ]
    }
  ],
  "selectors": [
    {
      "source": "scheduler.(?<region>(.*)).(?<cluster>[0-9]*)",
      "user": ".*@(?<domain>(.*)).io",
      "group": "global.${domain}:${region}:${cluster}"
    }
  ],
  "cpuQuotaPeriod": "1h"
}

